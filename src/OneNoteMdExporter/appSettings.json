{
  /****************************
    Export general settings
  ****************************/

  /* Name of the resource folder where attachments and image files are stored */
  "ResourceFolderName": "resources",

  /* Maximum number of characters of a page title. Above this limit, title is contracted. */
  "PageTitleMaxLength": 50,

  /****************************
  Setting applied only for export into  Markdown format
  ****************************/

  /* Add a YAML header at the beginning of each page that includes Page metadata (cf https://assemble.io/docs/YAML-front-matter.html) */
  "AddFrontMatterHeader": true,

  /* Front Matter date format https://learn.microsoft.com/en-us/dotnet/standard/base-types/custom-date-and-time-format-strings */
  "FrontMatterDateFormat": "yyyy-MM-ddTHH:mm:ss",

  /* Length limit of Section and page name used in file and folder name. Reduce this value to avoid error of max file system file path */
  "MdMaxFileLength": 50,

  /* How page hierarchies should be handled :
     - HierarchyAsFolderTree : as parent folders of the page. Ex: section/parentpage/childpage.md
     - HierarchyAsPageTitlePrefix : as page filename prefix. Ex: section/paarentpage_childpage.md
     - IgnoreHierarchy : ignore page hierarchy. Ex: section/childpage.md
  */
  "ProcessingOfPageHierarchy": "HierarchyAsFolderTree",

  /* For MdExport with ProcessingOfPageHierarchy=HierarchyAsPageTitlePrefix, the separator to use to prefix md page file name ; Ex: "_" value for "ParentPage_ChildPage.md" */
  "PageHierarchyFileNamePrefixSeparator": "_",

  /* Storage location of file attachments and image files
     - RootFolder : in a single folder at the root of the export folder,
     - PageParentFolder : in folders next to the md file
  */
  "ResourceFolderLocation": "RootFolder",


  /* How to handle OneNote links in the exported markdown:
     - KeepOriginal: Keep the original OneNote link format (onenote://...)
     - ConvertToMarkdown: Convert OneNote links to markdown format "[text](url)" (suggested for Joplin)
     - ConvertToWikilink: Convert OneNote links to wikilink format "[[Page Title|Display Text]]" (suggested for Obsidian)
     - Remove: Remove all OneNote links from the exported content but keep the text
  */
  "OneNoteLinksHandling": "ConvertToWikilink",

  /****************************
    Markdown rendering settings
  ****************************/

  /* One of pandoc format https://pandoc.org/MANUAL.html#general-options_
      - For Joplin "gfm" is recommended 
  */
  "PanDocMarkdownFormat": "gfm",

  /* Convert HTML IMG tag generated by PanDoc into markdown references */
  "PostProcessingMdImgRef": true,

  /* 
    Capture HTML styling in span-elements and "escape" it, so it is preserved during translation.
    Recommanded for editors that support HTML inside markdown (like TipTap/Notesnook )
    NB: if enable, highlighting is not translated into markdown highlighting using '==' syntax
  */
  "UseHtmlStyling": true,


  /****************************
    ADVANCED SETTINGS
  ****************************/

  /* Disable transformation based on OneNote XML preprocessing (paraph unfold, background and font-color,...) */
  "DisablePageXmlPreProcessing": false,

  /* Remove multiple consecutive linebreak generated by PanDoc */
  "DeduplicateLinebreaks": true,

  /* Prevent generation of more that 2 linebreaks in a row */
  "MaxTwoLineBreaksInARow": true,

  /* Remove undesired quotation blocks sometimes generated by PanDoc */
  "PostProcessingRemoveQuotationBlocks": true,

  /* Copy DocX export of pages along md files, keep temporary OneNote notebook opened */
  "KeepOneNoteTempFiles": false,

  /* Enable debug mode: outputs additional logs and copies intermediate files (docx, pandoc.md) next to exported md files */
  "Debug": true,


  /* How to handle OneNote indentation in the export:
     - LeaveAsIs: Don't do anything; this will basically remove the indentation from the markdown, because Pandoc doesn't support indentation when converting to markdown.
     - ConvertToEmSpaces: Convert indentation to em-spaces making the indentation explicit.
     - ConvertToBullets: Convert all content that is indented to a bullet list. The indentation usually looks best in this format, but you do get bullets.
  */
  "IndentingStyle": "LeaveAsIs",

  /* Remove OneNote header generated by OneNote Export APIs */
  "PostProcessingRemoveOneNoteHeader": true,

  /****************************
    Incremental Export Settings
  ****************************/

  /* Enable incremental export mode: only export pages that have been modified since the last export.
     A manifest file (.export-manifest.json) is created to track exported pages.
     Use --incremental CLI flag to enable for a single export, or set this to true for default behavior. */
  "IncrementalExport": false,

  /* When incremental export is enabled, automatically delete files for pages that have been deleted in OneNote */
  "CleanupDeletedPages": true,

  /* Automatically retry export if there are pages with errors until all pages are exported successfully
     or no progress is made (same number of errors as previous iteration).
     Use --retry-on-errors CLI flag to enable for a single export. */
  "RetryOnErrors": false,

  /* Maximum number of retry iterations when RetryOnErrors is enabled (0 = unlimited) */
  "MaxRetryIterations": 10
}
